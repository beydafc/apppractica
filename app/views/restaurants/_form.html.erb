<div class="container w-75 border shadow mt-5 p-3">
    <%= simple_form_for restaurant do |f|%>
    <%= f.input :name%>
    <%= f.input :description%>
    <%= f.input :address%>
    <%= f.input :category_ids, as: :select, input_html: { data: { controller: "dropdown" }, multiple: true },collection: @categories%>
    <%= image_tag restaurant.photo, size: "85x60" if restaurant.photo.attached? %><%= f.input :photo, as: :file%>
    <div class="row">
      <div class="col-2">
            <%= f.submit restaurant.new_record? ? "Save" : "Update", class:"btn btn-flat"%>
      </div>
      <div class="col-2">
        <%= link_to "Back", my_restaurants_path, class: "btn btn-volver"%>
      </div>
    </div>
  <% end %>
</div>
