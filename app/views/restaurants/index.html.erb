<h4 class="text-warning">All Restaurants</h4>

<div class="container mt-4">
  <div class="row mb-5">
    <% @restaurants.each do |restaurant|%>
      <div class="col-4 mb-2">
        <%= link_to restaurant_path(restaurant), class: "text-decoration-none" do %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= url_for restaurant.photo %>')">
            <%= restaurant.name %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
